@model IEnumerable<API2_MVC_Interface.Models.Post>

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Post</h4>
    <hr />
    @foreach (var item in Model)
    {
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Subject)
            </dt>
            <dd>
                @Html.DisplayFor(model => item.Subject)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Body)
            </dt>
            <dd>
                @Html.Raw(item.Body)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.AutherName)
            </dt>
            <dd>
                @Html.DisplayFor(model => item.AutherName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </dt>
            <dd>
                @*@Html.DisplayFor(modelItem => item.ImageUrl)*@
                <img class="img-rounded" src="@Url.Content("~/images/" + item.ImageUrl)" width="150" height="90" />
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd>
                @Html.DisplayFor(model => item.Category.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.User)
            </dt>
            <dd>
                @Html.DisplayFor(model => item.User.Id)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="@item.Id" />
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    }
</div>
