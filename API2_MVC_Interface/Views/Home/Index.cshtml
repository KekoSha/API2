
@model List<API2_MVC_Interface.Models.Post>

@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    @{
        string firstLi = "active";
        string firstdiv = "item active";
        int slideCounter = 0;
    }

    <ol class="carousel-indicators">
        @foreach (var item1 in Model)
        {
            <li data-target="#myCarousel" data-slide-to=@slideCounter class="@firstLi"></li>
            firstLi = "";
        }
    </ol>

    @{
        firstLi = "active";
        firstdiv = "item active";
        slideCounter = 0;
    }

    <div class="carousel-inner" role="listbox" style=" width:100%; height: 180px !important;">
        @foreach (var item1 in Model)
        {
            <div class="@firstdiv" align="Left" text-align="center">
                <img class="img-responsive" src="@Url.Content("~/"+API2_MVC_Interface.Properties.Resources.ImgFolder+"/"+item1.ImageUrl)" />
                <div class="carousel-caption" role="option" text-align="center">
                    <P>
                        <a asp-action="Details" asp-route-id="@item1.Id">@Html.DisplayFor(modelItem => item1.Subject)</a>
                    </P>
                </div>
            </div>
            firstdiv = "item";
        }
    </div>

    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


<div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 text-center">
                <div class="thumbnail">
                    <img class="img-rounded" width="350px" height="236px" src="@Url.Content("~/"+API2_MVC_Interface.Properties.Resources.ImgFolder+"/"+item.ImageUrl)" />
                    <div class="caption">
                        <h3>
                            <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Subject)</a>
                        </h3>
                        @Html.Raw(String.Concat(((string)item.Body).Take(550)));
                        <a asp-action="Details" asp-route-id="@item.Id">more</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>